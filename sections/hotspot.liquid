{% style %}
  .section-padding-{{section.id }} {
     padding-top: {{ section.settings.padding_top_mobile  | append: 'px'}};
     padding-bottom: {{ section.settings.padding_bottom_mobile | append: 'px'}};
   }
  .hotspot__products-wrapper{
     display: grid;
     grid-template-columns: repeat({{ section.settings.no_of_items_per_mobile }}, 1fr);
     gap: {{section.settings.mobile_gap}}px;
  }
     @media screen and (min-width:750px){
     .section-padding-{{section.id }} {
       padding-top: {{ section.settings.padding_top_desktop | append: 'px'}};
       padding-bottom: {{ section.settings.padding_bottom_desktop | append: 'px' }};
     }
    .hotspot__products-wrapper{
      grid-template-columns: repeat({{ section.settings.items_per_desktop }}, 1fr);
      gap: {{section.settings.desktop_gap}}px;
   }
  }
  {%  if section.blocks.size > 0 %}
    {%  for block in  section.blocks %}
      .hotspot-{{ block.id }}{
        top:calc({{ block.settings.position_top }}% - 22px);
        left:calc({{ block.settings.position_left }}% - 22px);
      }
    {% endfor %}
  {% endif %}
{% endstyle %}

{% if section.blocks.size > 0 %}
  {{ 'hotspot.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'hotspot.js' | asset_url }}" defer></script>
  <script src="{{ 'hotspot-product-card.js' | asset_url }}" defer></script>
{% endif %}

{%  if section.settings.add_extra_product %}
  {% assign variants = section.settings.matched_variants | strip | split:"|" %}
  {% assign size_variant = variants.first %}
  {% assign color_variant = variants.last %}
  {% assign product_id = section.settings.extra_product.selected_or_first_available_variant.id %}
 
{% endif %}

<hotspot-section
  class="hotspot section-padding-{{section.id }} color-{{ section.settings.color_scheme }}"
  data-size-variant="{{ size_variant }}"
  data-color-variant = "{{ color_variant }}"
  data-add-on-product-id="{{ product_id }}"
  data-section-id="{{section.id }}"
>
  <div class="hotspot__popup-container hidden">
    <div class="loading-spinner-container">
      {%- render 'loading-spinner' -%}
    </div>
    <div class="hotspot__popup-wrapper">
      <div class="close-button-container">
        {% render 'icons', icon_name : 'close_icon' %}
      </div>
      <div class="product-card-main-wrapper"></div>
    </div>
  </div>
  <div class="hotspot-wrapper page-width">
    <div class="hotspot__heading-prodcuts-wrapper">
      {% if section.settings.heading != blank %}
        <div class="hotspot__heading-wrapper">
          <h2 class="hotspot-heading">
            {{ section.settings.heading }}
          </h2>
        </div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="hotspot__products-wrapper">
          {% for block in section.blocks %}
            {% if block.settings.selected_product != blank %}
              {% if block.settings.image != blank %}
                {% assign product_image = block.settings.image %}
              {% else %}
                {% assign product_image = block.settings.selected_product.featured_image
                  | default: block.settings.selected_product.selected_or_first_available_variant.featured_image
                %}
              {% endif %}
              <div class="hotspot__product-container">
                <img
                  src="{{ product_image | image_url }}"
                  width="100%"
                  height="100%"
                  alt="{{ product_image.alt | escape }}"
                  class="hotspot-image"
                >
                <span
                  class="hotspot-icon-container hotspot-{{ block.id }}"
                  data-product-handle="{{ block.settings.selected_product.handle }}"
                >
                  {% render 'icons', icon_name: 'hotspot_icon' %}
                </span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</hotspot-section>

{% schema %}
{
  "name": "t:sections.hotspot.name",
  "class": "hotspot-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.hotspot.settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.hotspot.settings.heading",
      "default": "Tisso vison in the wild"
    },
    {
      "type": "select",
      "id": "no_of_items_per_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.hotspot.settings.one"
        },
        {
          "value": "2",
          "label": "t:sections.hotspot.settings.two"
        }
      ],
      "default": "2",
      "label": "t:sections.hotspot.settings.no_of_items_per_mobile"
    },
    {
      "type": "range",
      "id": "items_per_desktop",
      "label": "t:sections.hotspot.settings.items_per_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "desktop_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.hotspot.settings.desktop_gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.hotspot.settings.mobile_gap",
      "default": 4
    },
    {
      "type": "header",
      "content": "t:sections.hotspot.settings.add_on_product"
    },
    {
      "type": "checkbox",
      "id": "add_extra_product",
      "label": "t:sections.hotspot.settings.add_extra_product",
      "default": false
    },
    {
      "type": "text",
      "id": "matched_variants",
      "label": "t:sections.hotspot.settings.matched_variants",
      "default": "M|Black",
      "info": "t:sections.hotspot.settings.matched_variants_info"
    },
    {
      "type": "product",
      "id": "extra_product",
      "label": "t:sections.hotspot.settings.add_on_product"
    },
    {
      "type": "header",
      "content": "t:sections.hotspot.settings.section_padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "t:sections.hotspot.settings.padding_top_desktop",
      "min": 0,
      "max": 100,
      "unit": "px",
      "step": 1,
      "default": 90
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "t:sections.hotspot.settings.padding_bottom_desktop",
      "min": 0,
      "max": 100,
      "unit": "px",
      "step": 1,
      "default": 90
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "t:sections.hotspot.settings.padding_top_mobile",
      "min": 0,
      "max": 100,
      "unit": "px",
      "step": 1,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "t:sections.hotspot.settings.padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "unit": "px",
      "step": 1,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "t:sections.hotspot.blocks.hotspot.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.hotspot.blocks.hotspot.settings.image"
        },
        {
          "type": "range",
          "id": "position_top",
          "label": "t:sections.hotspot.blocks.hotspot.settings.position_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "position_left",
          "label": "t:sections.hotspot.blocks.hotspot.settings.position_left",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "product",
          "id": "selected_product",
          "label": "t:sections.hotspot.blocks.hotspot.settings.selected_product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.hotspot.presets.name",
      "category": "t:sections.hotspot.presets.category",
      "settings": {
        "heading": "Tisso vison in the wild",
        "no_of_items_per_mobile": "2",
        "items_per_desktop": 3,
        "desktop_gap": 20,
        "mobile_gap": 4,
        "padding_top_desktop": 90,
        "padding_bottom_desktop": 90,
        "padding_top_mobile": 40,
        "padding_bottom_mobile": 40
      },
      "blocks": [
        {
          "type": "hotspot",
          "settings": {
            "position_top": 50,
            "position_left": 50
          }
        }
      ]
    }
  ]
}
{% endschema %}